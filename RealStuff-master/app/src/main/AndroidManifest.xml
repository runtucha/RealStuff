<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ivor_hu.meizhi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".APP"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.ivor_hu.meizhi.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/TranslucentTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <!--<meta-data-->
            <!--android:name="android.app.default_searchable"-->
            <!--android:value="com.example.ivor_hu.meizhi.MainActivity" />-->
        </activity>
        <activity
            android:name=".ViewerActivity"
            android:theme="@style/Transparent">
            <!--<meta-data-->
            <!--android:name="android.support.PARENT_ACTIVITY"-->
            <!--android:value=".ViewerActivity" />-->
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/about"
            android:theme="@style/TranslucentTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AboutActivity" />
        </activity>

        <service android:name=".services.ImageFetchService" />
        <service android:name=".services.StuffFetchService" />
        <service android:name=".services.SearchFetchService" />

        <provider
            android:name=".widget.SearchSuggestionProvider"
            android:authorities="com.example.ivor_hu.widget.SearchRecentSuggestionsProvider" />
    </application>

</manifest>
